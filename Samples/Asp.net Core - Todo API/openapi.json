{
  "openapi": "3.0.1",
  "info": {
    "title": "Todo List API",
    "description": "A plugin that allows the user to create and manage a TODO list, you can Create(POST) with todo object in Body, Read All(GET) and Delete(PUT) with todo object in Body",
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://0124b315d895.ngrok.app"
    }
  ],
  "paths": {
    "/Todo": {
      "get": {
        "operationId": "getTodos",
        "summary": "Retrieves the user's list of todo",
        "responses": {
          "200": {
            "description": "List of todo successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todos"
                }
              }
            }
          }
        }
      },
      "put": {
        "operationId": "DeleteTodo",
        "summary": "Delete a task in the todo list",
        "description": "Call DELETE endpoint for delete a todo in a list",
        "parameters": {
          "in": "query",
          "name": "todo",
          "required": true,
          "description": "the todo description",
          "schema": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "Task successfully succefully deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - the todo doen't existe"
          }
        }
      },
      "post": {
        "operationId": "addTodo",
        "summary": "Add a todo to the list",
        "parameters": [
          {
            "in": "query",
            "name": "todo",
            "required": true,
            "description": "the todo description",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "type": "string",
        "description": "Represents a todo in a list",
        "required": true
      },
      "Todos": {
        "type": "array",
        "description": "List of the user's todo",
        "items": {
          "$ref": "#/components/schemas/Todo"
        }
      }
    }
  }
}
